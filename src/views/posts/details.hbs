    <div id="container">
        <section id="detailsPage">
            <div id="detailsInfo">
                <h1>Name: {{offer.name}}</h1>
                <div class="info"><img src={{offer.imageUrl}}></div>

                <div class="info">
                    <h3>Type: {{offer.type}}</h3>
                    <h3>Year of Production: {{offer.year}}</h3>
                    <h3>Years of Exploitation: {{offer.exploit}}</h3>
                    <h3>Damages: {{offer.damage}}</h3>
                    <h3>Description: {{offer.description}}</h3>
                    <h2>Price: {{offer.price}}</h2>
                </div>

                <!-- Conditionally render buttons based on user's authentication and ownership -->
                {{#if isAuthenticated}}
                {{#if isOwner}}
                <!-- If user is the owner of the offer -->
                <div class="buttons">
                    <a href="/posts/{{offer._id}}/edit" class="edit-btn">Edit</a>
                    <a href="/posts/{{offer._id}}/delete" class="delete-btn">Delete</a>
                </div>
                {{else}}
                <!-- If user is not the owner of the offer -->
                <div class="buttons">
                    <a href="#" class="buy-btn">Buy</a>
                </div>
                {{/if}}
                {{/if}}

                <!-- If the user is not the owner but has bought the offer -->
                {{#if isBought}}
                <p><span class="buy">Thank You For Your Purchase</span></p>
                {{/if}}
            </div>
        </section>
    </div>

</body>

<body>

    <div id="container">


        <section id="editPage">
            <form id='editForm' method="POST">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" value="{{offer.name}}">

                <label for="type">Type:</label>
                <input type="text" id="type" name="type" value="{{offer.type}}">

                <label for="production">Year of Production:</label>
                <input type="number" id="production" name="year" value="{{offer.year}}">

                <label for="exploitation">Years of Exploitation:</label>
                <input type="number" id="exploitation" name="exploit" value="{{offer.exploit}}">

                <label for="damages">Damages:</label>
                <input type="text" id="damages" name="damage" value="{{offer.damage}}">

                <label for="image">Image:</label>
                <input type="text" id="image" name="imageUrl" value="{{offer.imageUrl}}">

                <label for="price">Price:</label>
                <input type="number" id="price" name="price" value="{{offer.price}}">

                <label for="description">Description:</label>
                <input type="text" id="description" name="description" value="{{offer.description}}">

                <input type="submit" class="edit" value="Edit Offer">
            </form>
        </section>
    </div>

</body>

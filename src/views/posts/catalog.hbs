<body>

    <div id="container">


        <section id="viewCatalog" class="background-img">
            <!--If there are one or more electronics-->

            <div class="added-electronics">
                {{#if offers}}
                {{#each offers}}
                <a href="/posts/{{_id}}/details" class="added-electronics-in-market">
                    <img src="{{imageUrl}}" class="picture-added-electronics">
                    <h3>{{name}}</h3>
                    <span>{{price}}</span>
                </a>


            </div>
            {{/each}}
            {{else}}
            <!--If there are no electronics in catalog yet-->

            <div class="guest">
                There are no electronics found...
            </div>
            {{/if}}
        </section>

    </div>

</body>
